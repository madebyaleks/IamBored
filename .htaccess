<Files .htaccess>
    order allow,deny
    deny from all
</Files>

ErrorDocument 404 /

<IfModule mod_rewrite.c>  
RewriteEngine on   
RewriteCond %{REQUEST_FILENAME} !-d   
RewriteCond %{REQUEST_FILENAME}\.php -f   
RewriteRule ^(.*)$ $1.php 
</IfModule>  

